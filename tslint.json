{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "jsRules": {},
  "rules": {
    "prettier": [
      true,
      {
        "singleQuote": true,
        "tabWidth": 2,
        "useTabs": false,
        "printWidth": 100,
        "trailingComma": "es5",
        "parser": "typescript"
      }
    ],
    "trailing-comma": [
      false
    ],
    "ordered-imports": false,
    "member-ordering": [
      true,
      {
        "order": "fields-first"
      }
    ],
    "variable-name": false,
    "arrow-parens": false,
    "interface-name": false,
    "no-reference-import": false,
    "interface-over-type-literal": false,
    "object-literal-sort-keys": false
  }
}
